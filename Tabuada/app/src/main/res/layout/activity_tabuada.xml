<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tabuada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.davidenterprises.tabuada.TabuadaActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/garrafa"
        android:layout_marginLeft="10dp"
        android:id="@+id/garrafa1"
        />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@id/garrafa1"
        android:id="@+id/garrafa2"
        />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@id/garrafa2"
        android:id="@+id/garrafa3"
        />
    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_toRightOf="@id/garrafa3"
        android:id="@+id/garrafa4"
        />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/lixo"
        android:layout_toRightOf="@id/garrafa4"
        android:id="@+id/lixo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        android:id="@+id/txtNum1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="85dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="100sp"
        android:id="@+id/txtX"
        android:layout_alignBaseline="@id/txtNum1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txtNum1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="100sp"
        android:id="@+id/txtNum2"
        android:layout_alignBaseline="@id/txtNum1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/txtX"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/edtResposta"
        android:background="#88333333"
        android:layout_below="@id/txtX"
        android:layout_centerInParent="true"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textSize="96sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="32"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/edtResposta"
        android:layout_marginTop="15dp"
        android:text="@string/btnOK_text"
        android:textSize="20sp"
        android:id="@+id/btnOK"
        android:onClick="btnOk_click"
        />
</RelativeLayout>